{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Article'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Article</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Marque</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.marque }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Modele</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.modele }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Oem</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.oem }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Codelama</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.codelama }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Capacite</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.capacite }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Equivalencelama</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.equivalencelama }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Couleur</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.couleur }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Description</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.description }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Type</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.type }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('article') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('article_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('article_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}